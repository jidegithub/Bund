    <h2 class="primary_txt-clr text-4xl mb-6">Sign into your account</h2>

    <div>
    <%= label f, :email_address, class: "text-xl" %>
    <%= if @msg == "error"  do %>
      <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), class: "w-400 login_error_notification caution-input" %> 
      <span class=""><i class="fas fa-exclamation-circle"></i></span>
    <% end %>
    <%= if @msg !== "error"  do %>
      <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), class: "w-400" %>
    <% end %>
    <%= error_tag f, Pow.Ecto.Schema.user_id_field(@changeset) %> 
    </div>

    <div class="w-400 mt-6">
      <%= label f, :password, class: "text-xl" %>
      <%= if @msg == "error"  do %>
        <%= password_input f, :password, class: "login_error_notification w-full border-red-500 caution-input" %>
        <span class="caution-icon-below"><i class="fas fa-exclamation-circle"></i></span> 
      <% end %>
      <%= if @msg !== "error"  do %>
        <%= password_input f, :password, class: "w-400" %>
      <% end %>
      <%= error_tag f, :password %>

      <div class="w-400 mt-4">
        <%= link "Forgot password?", to: Routes.pow_reset_password_reset_password_path(@conn, :new), class: "text-2xl"  %>
      </div>
      <div class="flex h-16 item-center justify-center w-400 ">
        <%= submit "Sign in", class: "background_clr w-400 h-16 mt-12 text-center text-2xl" %>
      </div>
      <% end %>
      <div class="text-center w-400"><p class="text-base text-custom-main font-bold copyright-banner">Bund 2020. All rights reserved</p></div>
    </div>
    

